@model IEnumerable<ReversiMvcV2.Models.Spel>
@{
    ViewData["Title"] = "Index";
}



<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Omschrijving)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speler1)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Omschrijving)
            </td>
                <td>
                    @((item.Owner != null) ? item.Owner.Naam : item.Speler1)
                </td>
            <td>
                <a asp-action="Play" asp-route-id="@item.ID">Play</a> |
            </td>
        </tr>
}
    </tbody>
</table>